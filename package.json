{
  "name": "university-bus-tracking-system",
  "version": "1.0.0",
  "description": "Real-time bus tracking system for university students and faculty",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "list-drivers": "node scripts/list-all-drivers.js",
    "test-api": "node scripts/test-backend-api.js",
    "fix-duplicates": "node scripts/permanent-duplicate-fix.js",
    "sync-tables": "node scripts/sync-all-tables.js",
    "add-constraints": "node scripts/add-unique-constraints.js",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run start"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "bus-tracking",
    "university",
    "react",
    "nodejs",
    "postgresql",
    "postgis",
    "supabase",
    "realtime"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "socket.io-client": "^4.8.1"
  }
}

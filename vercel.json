{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/driver-login",
      "dest": "/index.html"
    },
    {
      "src": "/driver-dashboard",
      "dest": "/index.html"
    },
    {
      "src": "/admin-login",
      "dest": "/index.html"
    },
    {
      "src": "/admin-dashboard",
      "dest": "/index.html"
    },
    {
      "src": "/student-map",
      "dest": "/index.html"
    },
    {
      "src": "/driver",
      "dest": "/index.html"
    },
    {
      "src": "/student",
      "dest": "/index.html"
    },
    {
      "src": "/admin",
      "dest": "/index.html"
    },
    {
      "src": "/premium-demo",
      "dest": "/index.html"
    },
    {
      "src": "/legacy",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return hasRole('admin');
    }
    
    // Users collection - admin can read/write, users can read their own
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }
    
    // Drivers collection - admin only
    match /drivers/{driverId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Buses collection - admin only
    match /buses/{busId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Routes collection - read for all authenticated, write for admin
    match /routes/{routeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Shifts collection - admin only
    match /shifts/{shiftId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Schedules collection - admin can write, all authenticated can read
    match /schedules/{scheduleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}

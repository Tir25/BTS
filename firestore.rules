rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return hasRole('admin');
    }
    
    // Users collection - users can create their own profile, admin can write any profile
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      // Allow users to create their own profile (needed for new user creation)
      // or admin to create/update any profile
      allow create: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow update, delete: if isAdmin();
    }
    
    // Drivers collection - admin only
    match /drivers/{driverId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Buses collection - admin only
    match /buses/{busId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Routes collection - read for all authenticated, write for admin
    match /routes/{routeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Shifts collection - admin only
    match /shifts/{shiftId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Schedules collection - admin can write, all authenticated can read
    match /schedules/{scheduleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Destinations collection - admin only write, all authenticated can read
    match /destinations/{destinationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Schedule Templates collection - admin only
    match /scheduleTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Trip history collection - drivers can write their trips, admin can read all
    match /tripHistory/{tripId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && hasRole('driver');
      allow update, delete: if isAdmin();
    }
  }
}
